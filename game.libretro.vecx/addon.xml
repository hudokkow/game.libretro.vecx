<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.vecx"
		name="Vecx (vecx)"
		version="1.0.1"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
                   library_android="game.libretro.vecx.so"
                   library_linux="game.libretro.vecx.so"
                   library_osx="game.libretro.vecx.dylib"
                   library_windx="game.libretro.vecx.dll"
                   library_wingl="game.libretro.vecx.dll">
		<platforms>vecx</platforms>
		<extensions>vecx</extensions>
		<supports_vfs>true</supports_vfs>
		<supports_no_game>false</supports_no_game>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Vecx v1.0.1</summary>
		<description>Source: https://github.com/libretro/libretro-vecx</description>
		<platform>all</platform>
	</extension>
</addon>
